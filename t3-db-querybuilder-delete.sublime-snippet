\$queryBuilder = GeneralUtility::makeInstance(ConnectionPool::class)->getQueryBuilderForTable('${1:pages}');
\$pages = \$queryBuilder
    ->delete('$1')
    ->where(\$queryBuilder->expr()->eq('uid', \$queryBuilder->createNamedParameter(\$uid, Connection::PARAM_INT)))
    ->executeStatement();
